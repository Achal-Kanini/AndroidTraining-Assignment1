<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Red"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button_background"
        android:text="Red"
        android:textAlignment="center"
        android:textColor="#880A0A"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Green"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button_background"
        android:text="Green"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ClickCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Blue"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button_background"
        android:text="Blue"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ClickCount"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:layout_marginBottom="232dp"
        android:text="Clicked Color"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>